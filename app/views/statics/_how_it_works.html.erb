<section class="how_it_works_section container">
    <h1 class="how_it_works_section_title"> How it Works</h1>
    <div class="how_it_works_items row">
        <% @howitworks.each_with_index do |item, index| %>
            <div class="how_it_works_item col-xs-12 col-sm-6 col-md-3">
                <img src="<%= item.image.small.url %>" />
                <div class="item-title"><%= item.title %></div>
                <span class="item-content">
                    <%= item.description %>
                </span>
            </div>
        <% end %>
    </div>
</section>