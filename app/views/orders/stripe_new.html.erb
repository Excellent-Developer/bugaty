
<%= provide(:title, "Pay for your listing features") %>

<%#= render ('layouts/header') %>

<section class="only-logo-header">
  <div class="container">
    <%= link_to "<span>Bugaty</span>".html_safe, root_path, class:"only-logo-header-title" %>
    <hr style="margin-bottom:0px; border-top: 2px solid #eeeeee; margin-left: -10%; margin-right: -10%;">
  </div>
</section>

<section class="ads">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="">
          <div class="ads-list-title">
            <span>Pay for your</span> LISTING FEATURES
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="gradient-bg">
          <div class="title">
            Your selection
          </div>
          <div>
            <!-- feature type: featured on category page, featured on homepage, urgent -->
            <%= select_tag(:feature_type, options_for_select(features_array(@listing), 1)) %>
          </div>
          <div class="title">
            Payment method
          </div>
          <div class='image-container'>
            <%= image_tag('paypal', alt: 'PayPal', id: 'paypal-payment', class: 'payment-method-active') %>
          </div>
          <div class='image-container'>
            <%= image_tag('card', alt: 'Card via Stripe', id: 'stripe-payment') %>
          </div>
          <div class="title">
            Promotional code
          </div>
          <div>
            <p>Click here to enter your promotional code</p>
            <%= form_for(:coupon, :html => { class: 'form-inline coupon' }) do |f| %>
              <%= f.text_field :promotional_code, class: 'form-control', placeholder: 'Coupon code' %>
              <%= f.button 'APPLY COUPON', class: 'form-control btn btn-success', id: 'apply_coupon' %>
            <% end -%>
          </div>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="gradient-bg total-subscription">
          <div class="title">
            Your Selection
          </div>
          <div class='subscription-details'>
            <span><%= "#{currency_sign($price.currency)}#{$price.featured_home_price}" %></span>

            <ul>
              <li id='subscription-options-price'><%= "#{currency_sign($price.currency)}#{$price.featured_home_price}" %></li>
              <li id='subscription-options-method'><%= payment_method(@listing) %></li>
              <li id='subscription-options-coupon'>Code not applied</li>
            </ul>

            <% if @listing.featured_cat? %>
              <p>Your listing has featured on category page %></p>
            <% end %>
            <% if @listing.featured_home? %>
              <p>Your listing has featured on homepage %></p>
            <% end %>
            <% if @listing.urgent? %>
              <p>Your listing has urgent status %></p>
            <% end %>
          </div>
          <%= render 'orders/payment_button' %>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="subscription-testimonial">
  <% if @template[0] %>
  <div class="subscription-testimonial-title">
    <span><%= @template[0].title %></span>
  </div>
  <div class="container">
    <div class="subscription-testimonial-portfolio">
      <div class="row">
        <div class="col-sm-4">
          <img src="<%= @template[0].image_1.small.url %>" />
          <div class="title"><%= @template[0].title_1 %></div>
          <span class="description">
              <%= @template[0].description_1 %>
          </span>
        </div>
        <div class="col-sm-4">
          <img src="<%= @template[0].image_2.small.url %>" />
          <div class="title"><%= @template[0].title_2 %></div>
          <span class="description">
              <%= @template[0].description_2 %>
          </span>
        </div>
        <div class="col-sm-4">
          <img src="<%= @template[0].image_3.small.url %>" />
          <div class="title"><%= @template[0].title_3 %></div>
          <span class="description">
              <%= @template[0].description_3 %>
          </span>
        </div>
      </div>
    </div>
    <div class="subscription-testimonial-image" style="background-image: url('<%= @template[0].background %>')">
      <%= link_to "<span>#{@template[0].button_title}</span>".html_safe, root_path,  class: "btn btn-success" %>
    </div>
  </div>
  <% else %>
    <div class="subscription-testimonial-title">
      <span>This is testiminal</span>
